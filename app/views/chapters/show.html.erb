<%= link_to "Delete", book_chapter_path(@book,@chapter), method: :delete, class: "btn btn-danger btn-sm pull-right", data: {confirm: "Are you sure to delete the chapter?"}%>
<%= link_to "Edit", edit_book_chapter_path(@book,@chapter), class: "btn btn-primary btn-sm pull-right"%>

<h1><%= @chapter.title %></h1
<small><%= @book.title %></small>
<%= link_to "Add new Section", new_book_chapter_section_path(@book, @chapter), class: "btn btn-success pull-right"%>

<table class = "table table-striped table-hover">
  <% @chapter.sections.each do |section|%>
  <tr>
    <td>
        <%= link_to section.title, book_chapter_path(@book,@chapter,section)%>
    </td>
  </tr>
<%end%>
</table>
